{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "baseUrl": "../",
    "paths": {
      "@stardust-ui/react": ["src"],
      "*": ["*", "types/*"]
    },
    "plugins": [
      {"transform": "./transformers/propTypes.ts"}
    ],
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "../types",
      "../node_modules/@types"
    ],
    "jsx": "react",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "strictNullChecks": false
  }
}
